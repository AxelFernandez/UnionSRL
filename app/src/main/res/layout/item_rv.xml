<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forecast_container"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/rv_partida"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Partida: 16:40" />

    <TextView
        android:id="@+id/rv_descripcion"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rv_partida"
        android:layout_below="@+id/rv_partida"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Llegada: 18:40" />





</RelativeLayout>